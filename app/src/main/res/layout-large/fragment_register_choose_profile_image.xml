<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/register_fragment_shape"
    android:orientation="vertical"
    tools:context="com.q20.projectsummer.ui.RegisterChooseProfileImageFragment">


        <LinearLayout
            android:layout_width="@dimen/register_main_profile_image_shape_layout_large"
            android:layout_height="@dimen/register_main_profile_image_shape_layout_large"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/register_image_veiw_shape">

            <ImageView
                android:id="@+id/profile_image"
                android:tag="@drawable/char_m_40"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:src="@drawable/char_m_40"/>
        </LinearLayout>

        <com.q20.projectsummer.ui.AutoResizeTextViewWithIrsansFont
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="@string/choose_profile_image"
            android:textSize="@dimen/register_texts_font_size_layout_large"
            android:textColor="@color/colorA17"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/profile_image_images_layout_shape"
                android:layout_margin="20dp"
                android:padding="20dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:src="@drawable/char_m_40"
                    android:onClick="onMaleRegisterProfileImageClicked"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/profile_image_images_layout_shape"
                android:layout_margin="20dp"
                android:padding="20dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:src="@drawable/char_f_15"
                    android:onClick="onFemaleRegisterProfileImageClicked"/>
            </LinearLayout>
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <com.q20.projectsummer.ui.ButtonsWithIrsansFont
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/next"
            android:textSize="@dimen/buttons_text_size_layout_large"
            android:layout_gravity="center"
            android:background="@drawable/ranking_page_buttons_shape"
            android:onClick="onChooseProfileNextPageClicked"/>

</LinearLayout>
