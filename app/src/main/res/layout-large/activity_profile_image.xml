<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/colorA7"
    tools:context="com.q20.projectsummer.ui.ProfileImageActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="@dimen/profile_image_layouts_padding_size_layout_large"
        android:background="@drawable/profile_image_images_layout_shape">
        <ImageView
            android:id="@+id/profile_image_page_main_image_image_view"
            android:layout_width="@dimen/profile_image_page_image_size_layout_large"
            android:layout_height="@dimen/profile_image_page_image_size_layout_large"
            android:layout_margin="10dp"
            android:src="@drawable/char_m_40"
            android:layout_gravity="center"/>
    </RelativeLayout>

    <com.q20.projectsummer.ui.AutoResizeTextViewWithIrsansFont
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="@string/profile_image_text"
        android:textSize="@dimen/total_recycler_text_size_layout_large"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorA17"/>

    <android.support.v4.view.ViewPager
        android:layout_width="wrap_content"
        android:id="@+id/profile_page_view_pager"
        android:layout_height="0dp"
        android:background="@color/colorA7"
        android:padding="20dp"
        android:layout_weight="1.0"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="40dp"/>

    <com.pixelcan.inkpageindicator.InkPageIndicator
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profile_image_indicator"
        app:pageIndicatorColor="@color/colorA20"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="40dp"/>

<!--    <com.anton46.stepsview.StepsView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/steps_view"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="20dp"></com.anton46.stepsview.StepsView>
-->
</LinearLayout>
