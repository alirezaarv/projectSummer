<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    android:background="@drawable/register_fragment_shape"
    tools:context="com.q20.projectsummer.ui.RegisterChooseUserNameFragment">

        <LinearLayout
            android:layout_width="@dimen/register_main_profile_image_shape_layout_large"
            android:layout_height="@dimen/register_main_profile_image_shape_layout_large"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/register_image_veiw_shape">

            <ImageView
                android:id="@+id/register_username_profile_image"
                android:tag="@drawable/char_m_40"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:src="@drawable/char_m_40"/>
        </LinearLayout>

        <com.q20.projectsummer.ui.AutoResizeTextViewWithIrsansFont
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="@string/choose_user_name"
            android:textSize="@dimen/register_texts_font_size_layout_large"
            android:textColor="@color/colorA17"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <EditText
            android:id="@+id/register_username_page_edit_text"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:inputType="text"
            android:hint="@string/user_name"
            android:textSize="30sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/register_edit_text_shape"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <com.q20.projectsummer.ui.ButtonsWithIrsansFont
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/next"
            android:textSize="@dimen/buttons_text_size_layout_large"
            android:layout_gravity="center"
            android:background="@drawable/ranking_page_buttons_shape"
            android:onClick="onChooseUsernameClicked"/>

</LinearLayout>
