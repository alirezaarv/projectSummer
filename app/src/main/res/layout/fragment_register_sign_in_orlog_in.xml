<com.q20.projectsummer.ResponsiveViews.ResponsiveRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorA7"
    tools:context="com.q20.projectsummer.ui.RegisterSignInORLogInFragment">

    <com.q20.projectsummer.ResponsiveViews.ResponsiveImageView
        android:layout_width="155dp"
        android:layout_height="40dp"
        android:layout_marginTop="605dp"
        android:background="@drawable/ranking_page_buttons_shape"
        android:onClick="onFirstSignInClicked"/>
    <com.q20.projectsummer.Custom.AutoResizeTextViewWithIrsansFont
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:text="@string/sign_in_button"
        android:textSize="@dimen/buttons_text_size"
        android:layout_marginTop="610dp"
        android:layout_marginLeft="5dp"
        android:gravity="center"/>

    <com.q20.projectsummer.ResponsiveViews.ResponsiveImageView
        android:layout_width="155dp"
        android:layout_height="40dp"
        android:layout_marginTop="605dp"
        android:layout_marginLeft="213dp"
        android:background="@drawable/ranking_page_buttons_shape"
        android:onClick="onSecondSignInClicked"/>
    <com.q20.projectsummer.Custom.AutoResizeTextViewWithIrsansFont
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:text="@string/log_in_button"
        android:textSize="@dimen/buttons_text_size"
        android:layout_marginTop="610dp"
        android:layout_marginLeft="218dp"
        android:gravity="center"/>

</com.q20.projectsummer.ResponsiveViews.ResponsiveRelativeLayout>
