<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorA7"
    tools:context="com.q20.projectsummer.ui.TrophyPageActivity">
    
    <com.q20.projectsummer.ResponsiveViews.ResponsiveImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/trophy"
        android:scaleType="centerInside"/>

    <com.q20.projectsummer.ResponsiveViews.AutoResizeTextViewWithIrsansFont
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:textSize="@dimen/total_recycler_text_size"
        android:maxLines="1"
        android:text="@string/trophy_text"
        android:textColor="@color/colorA1"
        android:layout_marginTop="182dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"/>

    <com.q20.projectsummer.ResponsiveViews.ResponsiveRecyclerView
        android:layout_width="match_parent"
        android:layout_height="487dp"
        android:layout_marginTop="228dp"
        android:layout_marginLeft="16dp"
        android:scrollbars="vertical"
        android:id="@+id/trophy_page_recycler_container"/>
</RelativeLayout>
