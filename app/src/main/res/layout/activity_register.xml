<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.q20.projectsummer.ui.RegisterActivity">

    <FrameLayout
        android:id="@+id/register_fragment_container"
        android:layout_width="@dimen/register_fragment_container_size"
        android:layout_height="@dimen/register_fragment_container_size"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>
    <LinearLayout
        android:layout_width="@dimen/register_fragment_container_size"
        android:layout_height="@dimen/register_button_height_size"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:layout_marginBottom="-70dp"
        android:layout_above="@+id/register_fragment_container"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/log_in_button"
            android:layout_width="@dimen/register_button_width_size"
            android:layout_height="@dimen/register_button_height_size"
            android:text="@string/log_in_button"
            android:onClick="onLogInClicked"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/btn_main_padding_top_down"
            android:layout_alignTop="@+id/sign_in_button"
            android:layout_alignStart="@+id/register_fragment_container"
            android:background="@drawable/register_button_shape"/>
        <Button
            android:id="@+id/sign_in_button"
            android:layout_width="@dimen/register_button_width_size"
            android:layout_height="@dimen/register_button_height_size"
            android:text="@string/sign_in_button"
            android:onClick="onSignInClicked"
            android:layout_weight="1"
            android:layout_above="@+id/register_fragment_container"
            android:layout_alignEnd="@+id/register_fragment_container"
            android:background="@drawable/register_button_shape"/>
    </LinearLayout>
    <com.q20.projectsummer.ui.RoundedImageView
        android:id="@+id/register_profile_image"
        android:layout_width="@dimen/register_profile_image_size"
        android:layout_height="@dimen/register_profile_image_size"
        android:src="@drawable/char_m_40"
        android:layout_marginBottom="-40dp"
        android:background="@drawable/register_image_veiw_shape"
        android:layout_centerInParent="true"
        android:layout_above="@+id/register_fragment_container"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/register_bottom_button"
        android:layout_width="@dimen/register_button_width_size"
        android:layout_height="@dimen/register_button_height_size"
        android:text="@string/sign_in_button"
        android:onClick="onRegisterBottomClicked"
        android:background="@drawable/register_button_shape"
        android:layout_below="@+id/register_fragment_container"
        android:layout_marginTop="-25dp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
