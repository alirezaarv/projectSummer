<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_layout_game_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".ui.GameActivity">

    <com.q20.projectsummer.Custom.AutoResizeTextViewWithIrsansFont
        android:id="@+id/text_view_timer"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginLeft="155.5dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/btn_shape"
        android:backgroundTint="@color/colorA13"
        android:textAlignment="center"
        android:textColor="@color/colorA8" />

    <com.q20.projectsummer.Custom.AutoResizeTextViewWithIrsansFont
        android:id="@+id/text_view_word_explanation"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="46dp"
        android:background="@drawable/btn_shape"
        android:backgroundTint="@color/colorA1"
        android:gravity="center"
        android:maxLines="1"
        android:textAlignment="center"
        android:textColor="@color/colorA8"
        android:textSize="@dimen/text_size_medium" />

    <com.non_android_programmers.responsivegui.ResponsiveRelativeLayout
        android:id="@+id/layout_keyboard"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="551dp"
        android:background="@drawable/keyboard_background"
        android:backgroundTint="@color/colorA17" />

</RelativeLayout>